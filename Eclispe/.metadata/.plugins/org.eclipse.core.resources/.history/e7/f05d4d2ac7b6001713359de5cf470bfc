					+ age + ", '" + gender + "'" 
					+ ",'" + voted + "'" + ");";
			
			con = DriverManager.getConnection( PATH, USERNAME, PASSWORD);
			
			stmt = con.createStatement();
			
			stmt.executeUpdate( sql );
			
		}
		catch( Exception exc) 
		{
			exc.printStackTrace();
		}
	}
	
	public void deleteDataVoters( String id )
	{
		try
		{
			String sql = "Delete From voters WHERE id = " + "\"" + id + "\"" + ";";
			
			con = DriverManager.getConnection( PATH, USERNAME, PASSWORD);
			
			stmt = con.createStatement();
			
			stmt.executeUpdate( sql );
			
		}
		catch( Exception exc) 
		{
			exc.printStackTrace();
		}
	}
	
